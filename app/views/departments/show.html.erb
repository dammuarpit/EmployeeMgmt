<h1>Department Details</h1>

<ol class="breadcrumb">
  <li><%= link_to 'Dashboard', home_page_path %></li>
  <li><%= link_to ' Departments', departments_path %></li>
  <li class="active">Show</li>
</ol>

<div class="list-group">
  <span class="list-group-item">
      <div class="row">
        <div class="col-md-6 margin-bottom-15">
          <label>NAME:</label>
          <span class="form-control-static"><%= @department.name %></span>
        </div>
      </div>

      <div class="row">
        <div class="col-md-6 margin-bottom-15">
          <label>DESCRIPTION:</label>
          <span class="form-control-static"><%= @department.description %></span>
        </div>
      </div>
  </span>
</div>
